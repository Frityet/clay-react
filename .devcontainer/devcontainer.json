// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/debian
{
	"name": "Debian",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "mcr.microsoft.com/devcontainers/base:trixie",
	"features": {
		"ghcr.io/devcontainers/features/common-utils:2": {
			"installZsh": true,
			"configureZshAsDefaultShell": true,
			"installOhMyZsh": true,
			"installOhMyZshConfig": true,
			"upgradePackages": true,
			"nonFreePackages": true,
			"installSsl": true,
			"username": "vscode",
			"userUid": "automatic",
			"userGid": "automatic"
		},
		"./llvm": {
			"version": "21"
		},
		"./xmake": {}
	},
  "runArgs": [
    "--userns=keep-id",
    "--security-opt=label=disable",

    // X11 (Xwayland)
    "-e", "DISPLAY=${localEnv:DISPLAY}",
    "-e", "XAUTHORITY=/tmp/.Xauthority",
    "-v", "${localEnv:XAUTHORITY}:/tmp/.Xauthority:ro",
    "-v", "/tmp/.X11-unix:/tmp/.X11-unix:rw",

    // Wayland
    "-e", "WAYLAND_DISPLAY=${localEnv:WAYLAND_DISPLAY}",
    "-v", "${localEnv:XDG_RUNTIME_DIR}/${localEnv:WAYLAND_DISPLAY}:/tmp/${localEnv:WAYLAND_DISPLAY}:rw",
    "-e", "XDG_RUNTIME_DIR=/tmp"
  ],
  "containerEnv": {
    "QT_X11_NO_MITSHM": "1"
  },
"postCreateCommand": "sudo apt-get update && sudo apt-get install -y x11-apps",
"customizations": {
	"vscode": {
		"extensions": [
			"llvm-vs-code-extensions.vscode-clangd"
		],
		"settings": {
			"clangd.path": "/usr/bin/clangd"
		}
	}
}
	// Features to add to the dev container. More info: https://containers.dev/features.
	// "features": {},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],

	// Configure tool-specific properties.
	// "customizations": {},

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}
